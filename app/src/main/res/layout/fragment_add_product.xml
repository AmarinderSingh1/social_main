<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp"
                    >
                    <TextView
                        android:id="@+id/textProCat"
                        android:textSize="@dimen/textN"
                        android:text="Select Product Category*"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_marginRight="@dimen/padding"
                        android:layout_marginBottom="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:id="@+id/spinnerProCat"
                        android:paddingRight="@dimen/paddingS"
                        android:layout_marginBottom="4dp"
                        android:paddingBottom="@dimen/paddingS"
                        android:paddingTop="@dimen/paddingS"
                        android:layout_height="wrap_content">
                    </Spinner>



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_marginRight="@dimen/paddingL"
                        android:layout_marginBottom="8dp"
                        android:background="@color/gray_light"
                        />


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:id="@+id/pnameInput"
                        android:layout_height="wrap_content"
                        android:hint="Product Name*"
                        android:textSize="@dimen/textS"
                        android:textColorHint="@color/gray_light"
                        app:hintTextAppearance="@style/TextInputLayout"
                        >

                        <EditText
                            android:layout_width="match_parent"
                            android:padding="@dimen/padding"
                            fontPath="fonts/regular.ttf"
                            tools:ignore="MissingPrefix"
                            android:textColor="@color/btnText"
                            android:textSize="@dimen/textS"
                            android:id="@+id/editPname"
                            android:background="@android:color/transparent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:lines="1"
                            android:inputType="text"
                            android:digits="@string/digits"
                            />
                    </android.support.design.widget.TextInputLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_marginRight="@dimen/paddingL"
                        android:layout_marginBottom="@dimen/padding"
                        android:background="@color/gray_light"
                        />
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:id="@+id/hsCodeInput"
                        android:layout_height="wrap_content"
                        android:hint="HS Code*"
                        android:textSize="@dimen/textS"
                        android:textColorHint="@color/gray_light"
                        app:hintTextAppearance="@style/TextInputLayout"

                        >

                        <EditText
                            android:id="@+id/editHS"
                            fontPath="fonts/regular.ttf"
                            tools:ignore="MissingPrefix"
                            android:textSize="@dimen/textS"
                            android:textColor="@color/btnText"
                            android:layout_width="match_parent"
                            android:padding="@dimen/padding"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:background="@android:color/transparent"
                            android:digits="@string/digits1"
                            />
                    </android.support.design.widget.TextInputLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_marginRight="@dimen/paddingL"
                        android:layout_marginBottom="@dimen/padding"
                        android:background="@color/gray_light"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        >
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/manCostInput"
                        android:layout_height="wrap_content"
                        android:hint="Manufacturing Cost($)*"
                        android:layout_weight="10"
                        android:textSize="@dimen/textS"
                        app:hintTextAppearance="@style/TextInputLayout"

                        >

                        <EditText
                            android:id="@+id/editManCost"
                            fontPath="fonts/regular.ttf"
                            android:textColor="@color/btnText"
                            tools:ignore="MissingPrefix"
                            android:layout_weight="1"
                            android:textSize="@dimen/textS"
                            android:layout_width="match_parent"
                            android:padding="@dimen/padding"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:background="@android:color/transparent"
                            android:digits="abcdefghijklmnopqrstuvwxyz0123456789 "
                            />
                    </android.support.design.widget.TextInputLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imgName"
                            android:text="Attach Worksheet"
                            android:textAllCaps="false"
                            android:textColor="@color/gray_light"
                            android:textSize="@dimen/textNS"
                            android:layout_gravity="bottom"
                            android:maxLength="16"
                            android:paddingBottom="@dimen/paddingS"
                             />
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_add_black_24dp"
                            android:layout_gravity="bottom"
                            android:paddingBottom="5dp"
                            android:id="@+id/uploadPlus"
                            android:layout_marginRight="@dimen/padding"
                             />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_marginRight="@dimen/paddingL"
                        android:layout_marginBottom="@dimen/padding"
                        android:background="@color/gray_light"
                        />
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:id="@+id/spInput"
                        android:layout_height="wrap_content"
                        android:hint="Current Selling Price($)*"
                        android:textSize="@dimen/textS"
                        app:hintTextAppearance="@style/TextInputLayout"

                        >

                        <EditText
                            android:id="@+id/editSP"
                            fontPath="fonts/regular.ttf"
                            tools:ignore="MissingPrefix"
                            android:textSize="@dimen/textS"
                            android:textColor="@color/btnText"
                            android:layout_width="match_parent"
                            android:padding="@dimen/padding"
                            android:inputType="numberDecimal"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:digits="abcdefghijklmnopqrstuvwxyz0123456789 "
                            />
                    </android.support.design.widget.TextInputLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_marginRight="@dimen/paddingL"
                        android:layout_marginBottom="@dimen/padding"
                        android:background="@color/gray_light"
                        />


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:id="@+id/cMarginInput"
                        android:layout_height="wrap_content"
                        android:hint="Current Margin / Unit ($)*"
                        android:textSize="@dimen/textS"
                        app:hintTextAppearance="@style/TextInputLayout"

                        >

                        <EditText
                            android:id="@+id/editMargin"
                            fontPath="fonts/regular.ttf"
                            tools:ignore="MissingPrefix"
                            android:textSize="@dimen/textS"
                            android:textColor="@color/btnText"
                            android:layout_width="match_parent"
                            android:padding="@dimen/padding"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:background="@android:color/transparent"
                            android:digits="abcdefghijklmnopqrstuvwxyz0123456789 "
                            />
                    </android.support.design.widget.TextInputLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_marginRight="@dimen/paddingL"
                         android:background="@color/gray_light"
                        android:layout_marginBottom="8dp"
                        />
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:id="@+id/DspInput"
                        android:layout_height="wrap_content"
                        android:hint="Desired Selling Price ($)* "
                        android:textSize="@dimen/textS"
                        app:hintTextAppearance="@style/TextInputLayout"

                        >

                        <EditText
                            android:id="@+id/editDSP"
                            fontPath="fonts/regular.ttf"
                            tools:ignore="MissingPrefix"
                            android:textSize="@dimen/textS"
                            android:textColor="@color/btnText"
                            android:layout_width="match_parent"
                            android:padding="@dimen/padding"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:background="@android:color/transparent"
                            android:digits="abcdefghijklmnopqrstuvwxyz0123456789 "
                            />
                    </android.support.design.widget.TextInputLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_marginRight="@dimen/paddingL"
                         android:background="@color/gray_light"
                        android:layout_marginBottom="8dp"
                        />


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:id="@+id/AddInput"
                        android:layout_height="wrap_content"
                        android:hint="Additional Information"
                        android:textSize="@dimen/textS"
                        app:hintTextAppearance="@style/TextInputLayout"

                        >

                        <EditText
                            android:id="@+id/editAdd"
                            fontPath="fonts/regular.ttf"
                            tools:ignore="MissingPrefix"
                            android:textSize="@dimen/textS"
                            android:textColor="@color/btnText"
                            android:layout_width="match_parent"
                            android:padding="@dimen/padding"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:background="@android:color/transparent"
                            android:digits="@string/digits"
                            />
                    </android.support.design.widget.TextInputLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_marginRight="@dimen/paddingL"
                        android:layout_marginBottom="30dp"
                        android:background="@color/gray_light"

                        />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15sp"
                        android:layout_marginBottom="@dimen/padding"
                        android:background="@color/btnBack"
                        />

                    <TextView
                        android:id="@+id/textUplaodDoc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding"
                        android:textSize="@dimen/textS"
                        android:textColor="@color/btnText"
                        fontPath="fonts/bold.ttf"
                        tools:ignore="MissingPrefix"
                        android:text="Upload Product Flyers &amp; Specification Documents*"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:padding="@dimen/padding"
                            android:src="@drawable/upload_icon"
                            android:id="@+id/upload"
                            />
                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/paddingS"
                            android:id="@+id/flyRecView"
                            >
                        </android.support.v7.widget.RecyclerView>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textFormat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_light"
                        android:paddingRight="@dimen/padding"
                        android:paddingLeft="@dimen/padding"
                        android:paddingBottom="@dimen/padding"
                        android:textSize="@dimen/textNS"
                        fontPath="fonts/regular.ttf"
                        tools:ignore="MissingPrefix"
                        android:text=" : doc, docx, txt, jpg, jpeg, png, pdf"
                        />


                    <TextView
                        android:id="@+id/textWarning"
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding"
                        android:textSize="@dimen/textNS"
                        android:textColor="@color/gray_light"
                        android:gravity="left"
                        fontPath="fonts/regular.ttf"
                        tools:ignore="MissingPrefix"
                        android:layout_marginBottom="@dimen/paddingL"
                        android:text="Please upload product related documentation that should contain product imagery, specifications and features."
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15sp"
                        android:layout_marginBottom="@dimen/padding"
                        android:background="@color/btnBack"
                        />
                </LinearLayout>



                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    fontPath="fonts/regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:id="@+id/saveBtn"
                    android:textAllCaps="false"
                    android:background="@drawable/rounded_black"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textS"
                    android:text="Save"
                    />
            </LinearLayout>

    </ScrollView>

</android.support.design.widget.CoordinatorLayout>