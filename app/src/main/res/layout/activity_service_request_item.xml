<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/commentCorLay"
    >

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/bottom_bg"
                android:padding="@dimen/paddingL"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/padding"
                    android:layout_marginBottom="@dimen/padding"
                    android:weightSum="2"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textSize="@dimen/textS"
                        android:id="@+id/textSRN"
                        android:layout_weight="1"
                        android:text="hello"
                        fontPath="fonts/regular.ttf"
                        tools:ignore="MissingPrefix"
                        android:textColor="@color/btnText"
                        />
                    <TextView
                        android:text="hello"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textSize="@dimen/textS"
                        android:id="@+id/textSRNVal"
                        fontPath="fonts/regular.ttf"
                        tools:ignore="MissingPrefix"
                        android:textColor="@color/gray_light"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/gray_light"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/padding"
                    android:layout_marginBottom="@dimen/padding"

                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:text="hello"
                        android:textSize="@dimen/textS"
                        android:id="@+id/textReqTyp"
                        fontPath="fonts/regular.ttf"
                        tools:ignore="MissingPrefix"
                        android:textColor="@color/btnText"
                        />
                    <TextView
                        android:text="hello"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textSize="@dimen/textS"
                        android:id="@+id/textReqTypeVal"

                        fontPath="fonts/regular.ttf"
                        tools:ignore="MissingPrefix"
                        android:textColor="@color/gray_light"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/gray_light"/>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                    android:layout_marginTop="@dimen/padding"
                    android:layout_marginBottom="@dimen/padding"

                    >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:textSize="@dimen/textS"
                    android:id="@+id/textSubject"

                    android:text="hello"
                    fontPath="fonts/regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:textColor="@color/btnText"
                    />
                <TextView
                    android:text="hello"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="@dimen/textS"
                    android:id="@+id/textSubjectVal"

                    fontPath="fonts/regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:textColor="@color/gray_light"
                    />
            </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/gray_light"/>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                    android:layout_marginTop="@dimen/padding"
                    android:layout_marginBottom="@dimen/padding"

                    >
                <TextView
                    fontPath="fonts/regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:textColor="@color/btnText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:textSize="@dimen/textS"
                    android:id="@+id/textReqDate"

                    android:text="hello"
                    />
                <TextView
                    android:text="hello"
                    fontPath="fonts/regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:textColor="@color/gray_light"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="@dimen/textS"
                    android:id="@+id/textReqDateVal"

                    />
            </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/gray_light"/>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                    android:layout_marginTop="@dimen/padding"
                    android:layout_marginBottom="@dimen/padding"

                    >
                <TextView
                    fontPath="fonts/regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:textColor="@color/btnText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="@dimen/textS"
                    android:id="@+id/textRaise"

                    android:layout_weight="1"
                    android:text="hello"
                    />
                <TextView
                    android:text="hello"
                    fontPath="fonts/regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:textColor="@color/gray_light"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="@dimen/textS"
                    android:id="@+id/textRaiseVal"

                    />
            </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/gray_light"/>
                <LinearLayout
                    android:layout_marginTop="@dimen/padding"
                    android:layout_marginBottom="@dimen/padding"

                    android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <TextView
                    fontPath="fonts/regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:textColor="@color/btnText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="@dimen/textS"
                    android:id="@+id/textCallNum"

                    android:layout_weight="1"
                    android:text="hello"
                    />
                <TextView
                    android:text="hello"
                    android:layout_weight="1"
                    fontPath="fonts/regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:textColor="@color/gray_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="@dimen/textS"
                    android:id="@+id/textCallNumVal"

                    />
            </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/gray_light"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:paddingBottom="@dimen/textL"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        fontPath="fonts/regular.ttf"
                        tools:ignore="MissingPrefix"
                        android:textColor="@color/btnText"
                        android:layout_weight="1"
                        android:text="hello"
                        android:textSize="@dimen/textS"
                        android:id="@+id/textReqStat"

                        />
                    <TextView
                        android:text="hello"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        fontPath="fonts/regular.ttf"
                        tools:ignore="MissingPrefix"
                        android:textColor="@color/theme_color"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textSize="@dimen/textS"
                        android:id="@+id/textReqStatVal"

                        />
                </LinearLayout>



            </LinearLayout>

            <TextView
                android:id="@+id/descriptionLabel"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                fontPath="fonts/regular.ttf"
                tools:ignore="MissingPrefix"
                android:textColor="@color/btnText"
                android:textSize="@dimen/textL"
                android:text="Issue Description"
                />


            <TextView
                android:id="@+id/desData"
                android:paddingBottom="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding"
                fontPath="fonts/regular.ttf"
                tools:ignore="MissingPrefix"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/textS"
                android:text="Issue Description"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linUpload"
                >
                <TextView
                    android:id="@+id/uploadLabel"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding"
                    fontPath="fonts/regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:textColor="@color/btnText"
                    android:textSize="@dimen/textM"
                    android:text="Uploaded File(s)"
                    />

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recUploadedFiles"
                    android:layout_marginRight="@dimen/padding"
                    android:layout_marginLeft="@dimen/padding"
                    ></android.support.v7.widget.RecyclerView>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/gray_light"
                android:layout_margin="@dimen/padding"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linComment"

                >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               >
                <TextView
                    android:id="@+id/addCommentLabel"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding"
                    fontPath="fonts/bold.ttf"
                    tools:ignore="MissingPrefix"
                    android:textColor="@color/btnText"
                    android:textSize="@dimen/textM"
                    android:text="Add Comment"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:id="@+id/commentInput"
                    android:layout_height="wrap_content"
                    android:hint="Comment"
                    android:textSize="@dimen/textS"
                    android:textColorHint="@color/gray_light"
                    app:hintTextAppearance="@style/TextInputLayout"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:padding="@dimen/padding"
                        fontPath="fonts/regular.ttf"
                        tools:ignore="MissingPrefix"
                        android:textColor="@color/btnText"
                        android:textSize="@dimen/textS"
                        android:id="@+id/editComment"
                        android:background="@android:color/transparent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:lines="1"
                        android:inputType="text"
                        android:digits="@string/digits"
                        />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/gray_light"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginRight="@dimen/padding"
                android:layout_marginBottom="@dimen/padding"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:padding="@dimen/padding"
                    android:src="@drawable/upload_icon"
                    android:id="@+id/uploadExtra"
                    />
                <TextView
                    android:id="@+id/attachLabel"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fontPath="fonts/regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:textColor="@color/gray_light"
                    android:textSize="@dimen/textS"
                    android:text="Attachments: "
                    />
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/paddingS"
                    android:id="@+id/attExtraRecView"
                    >
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>
            <TextView
                android:id="@+id/textAllow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_light"
                android:paddingRight="@dimen/padding"
                android:paddingLeft="@dimen/padding"
                android:paddingBottom="@dimen/padding"
                android:textSize="@dimen/textNS"
                fontPath="fonts/regular.ttf"
                tools:ignore="MissingPrefix"
                android:text=" : doc, docx, txt, jpg, jpeg, png, pdf"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                fontPath="fonts/regular.ttf"
                tools:ignore="MissingPrefix"
                android:id="@+id/subBtn"
                android:textAllCaps="false"
                android:background="@drawable/rounded_black"
                android:textColor="@color/white"
                android:textSize="@dimen/textS"
                android:text="Submit"
                android:onClick="addComment"
                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/commentLayout"
                android:paddingBottom="@dimen/textXXL"
                >
                <TextView
                    android:id="@+id/commentLabel"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding"
                    fontPath="fonts/bold.ttf"
                    tools:ignore="MissingPrefix"
                    android:textColor="@color/btnText"
                    android:textSize="@dimen/textM"
                    android:text="Comments"
                    />

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/recComments"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginRight="@dimen/padding"
                    android:layout_marginLeft="@dimen/padding"
                    ></android.support.v7.widget.RecyclerView>
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>