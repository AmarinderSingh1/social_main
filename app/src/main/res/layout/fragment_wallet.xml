<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/wallets_one"
                android:layout_gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/walletbal"
                fontPath="fonts/bold.ttf"
                tools:ignore="MissingPrefix"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:text="$6500"
                android:gravity="center"
                />

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            fontPath="fonts/regular.ttf"
            tools:ignore="MissingPrefix"
                android:gravity="center"
                android:id="@+id/textwalletbal"
                android:text="Wallet Balance"
            android:textColor="@color/gray"
            android:textSize="@dimen/textS"
            android:layout_marginBottom="@dimen/paddingL"
            />
            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginRight="@dimen/padding"
                android:layout_marginLeft="@dimen/padding"
                android:background="@color/btnBack"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingTop="@dimen/paddingL"
                android:paddingBottom="@dimen/paddingL"
                android:paddingRight="@dimen/padding"
                android:paddingLeft="@dimen/padding"
                >
                <TextView
                    android:id="@+id/textlp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Payment"
                    android:layout_weight="1"
                    fontPath="fonts/regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textS"
                    />
                <TextView
                    android:id="@+id/textlp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$3200"
                    fontPath="fonts/regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:textSize="@dimen/textS"
                    android:textColor="@color/gray"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginRight="@dimen/padding"
                android:layout_marginLeft="@dimen/padding"
                android:background="@color/btnBack"
                />
            <LinearLayout
                android:weightSum="2"
                android:paddingTop="@dimen/paddingL"
                android:paddingBottom="@dimen/paddingL"
                android:paddingRight="@dimen/padding"
                android:paddingLeft="@dimen/padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/textnp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next Payment"
                    fontPath="fonts/regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:layout_weight="1"
                    android:textSize="@dimen/textS"
                    android:textColor="@color/gray"
                    />
                <TextView
                    android:id="@+id/textnp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$2500"
                    android:layout_gravity="right"
                    android:gravity="right"
                    fontPath="fonts/regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:layout_weight="1"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textS"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginRight="@dimen/padding"
                android:layout_marginLeft="@dimen/padding"
                android:background="@color/btnBack"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/paddingL"
                android:paddingBottom="@dimen/paddingL"
                android:paddingRight="@dimen/padding"
                android:paddingLeft="@dimen/padding"
                android:weightSum="2"
                >
                <TextView
                    android:id="@+id/textop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Outstanding Payments"
                    android:layout_weight="1"
                    fontPath="fonts/regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:textSize="@dimen/textS"
                    android:textColor="@color/gray"
                    />
                <TextView
                    android:id="@+id/textop1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$200"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:gravity="right"
                    fontPath="fonts/regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:textSize="@dimen/textS"
                    android:textColor="@color/gray"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginRight="@dimen/padding"
                android:layout_marginLeft="@dimen/padding"
                android:background="@color/btnBack"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/paddingL"
                android:paddingBottom="@dimen/paddingL"
                android:paddingRight="@dimen/padding"
                android:paddingLeft="@dimen/padding"
                android:weightSum="2"
                >
                <TextView
                    android:id="@+id/textuo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unbilled Orders"
                    android:layout_weight="1"
                    fontPath="fonts/regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:textSize="@dimen/textS"
                    android:textColor="@color/gray"
                    />
                <TextView
                    android:id="@+id/textuo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$600"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:gravity="right"
                    fontPath="fonts/regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:textSize="@dimen/textS"
                    android:textColor="@color/gray"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginRight="@dimen/padding"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginBottom="@dimen/padding"
                android:background="@color/btnBack"
                />
            <Button
                android:id="@+id/twbBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_black"
                android:layout_margin="@dimen/padding"
                android:padding="@dimen/paddingL"
                android:textColor="@color/white"
                android:text="Transfer Wallet Balance"
                />
        </LinearLayout>

    </RelativeLayout>

    </ScrollView>

</android.support.design.widget.CoordinatorLayout>