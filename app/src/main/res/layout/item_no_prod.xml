<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/relNoProd"
    android:visibility="visible"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/ic_refresh_black_24dp"
        android:layout_marginTop="20dp"
        android:padding="4dp"
        android:id="@+id/imgRefresh"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_report_problem_black_24dp"
             android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textTitle1"
            fontPath="fonts/bold.ttf"
            tools:ignore="MissingPrefix"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:textColor="@color/btnText"
            android:layout_height="wrap_content"
            android:text="No Service Requests Yet"
            android:paddingRight="@dimen/padding"
            android:textSize="@dimen/textS"
            android:layout_marginBottom="@dimen/paddingL"
          />

        <TextView
            android:id="@+id/textTitle2"
            fontPath="fonts/bold.ttf"
            tools:ignore="MissingPrefix"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:textColor="@color/gray_light"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingRight="@dimen/padding"
            android:textSize="12dp"

            />

        <TextView
            android:id="@+id/textTitle3"
            fontPath="fonts/bold.ttf"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textColor="@color/gray_light"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingRight="@dimen/padding"
            android:textSize="12dp"
            tools:ignore="MissingPrefix"

            />



        <TextView
            android:id="@+id/textTitle4"
            fontPath="fonts/bold.ttf"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:textColor="@color/gray_light"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:paddingRight="@dimen/padding"
            android:textSize="12dp"
            tools:ignore="MissingPrefix" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            fontPath="fonts/bold.ttf"
            android:textSize="@dimen/textS"
            android:textAllCaps="false"
            tools:ignore="MissingPrefix"
            android:id="@+id/btnaddProd2"
            android:background="@drawable/rounded_black"
            android:textColor="@color/white"
            android:text=""
            />

    </LinearLayout>

</RelativeLayout>