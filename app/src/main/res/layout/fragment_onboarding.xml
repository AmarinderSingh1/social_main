<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/onBoardGrey"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/paddingS"
                android:background="@color/onBoardGrey"
                >
                <View
                    android:layout_width="8dp"
                    android:id="@+id/viewR1"
                    android:layout_marginTop="@dimen/paddingL"
                    android:layout_height="8dp"
                    android:background="@drawable/round"
                    />
                <View
                    android:layout_width="120dp"
                    android:id="@+id/viewL1"
                    android:layout_marginTop="19dp"
                    android:layout_height="1dp"
                    android:background="@color/gray_light"
                    />
                <View
                    android:layout_width="8dp"
                    android:id="@+id/viewR2"
                    android:layout_marginTop="@dimen/paddingL"
                    android:layout_height="8dp"
                    android:background="@drawable/round"
                    />
                <View
                    android:layout_marginTop="19dp"
                    android:layout_width="120dp"
                    android:id="@+id/viewL2"
                    android:layout_height="1dp"
                    android:background="@color/gray_light"
                    />
                <View
                    android:layout_width="8dp"
                    android:id="@+id/viewR3"
                    android:layout_marginTop="@dimen/paddingL"
                    android:layout_height="8dp"
                    android:background="@drawable/round"
                    />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:paddingTop="@dimen/paddingS"
            android:paddingBottom="@dimen/paddingL"
            android:background="@color/onBoardGrey"
            >

            <TextView
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Business Info"
                android:textSize="@dimen/textXS"
                android:id="@+id/textBInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/textXS"
                android:id="@+id/textIReview"
                android:text="In Review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/textXS"
                android:id="@+id/textSContract"
                android:text="Sign Contract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </LinearLayout>

       <LinearLayout
           android:id="@+id/bottomLayout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:paddingTop="@dimen/paddingL"
           android:layout_marginTop="@dimen/paddingL"
           >

           <LinearLayout
               android:id="@+id/businessDetails"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:onClick="businessDetails"
               android:orientation="horizontal">

               <ImageView
                   android:id="@+id/imgView1"
                   android:layout_width="55dp"
                   android:layout_marginTop="6dp"
                   android:layout_height="55dp"
                   android:layout_marginLeft="@dimen/paddingL"
                   android:layout_marginRight="@dimen/paddingL"
                   android:src="@drawable/number1gray" />

               <LinearLayout
                   android:layout_width="250dp"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:orientation="vertical"
                   android:paddingRight="@dimen/paddingS">

                   <TextView
                       android:id="@+id/tvHeading1"
                       fontPath="fonts/bold.ttf"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingLeft="@dimen/paddingS"
                       android:paddingRight="@dimen/paddingS"
                       android:paddingTop="@dimen/paddingS"
                       android:text="Profile"
                       android:textColor="@color/btnText"
                       android:textSize="@dimen/textL"
                       tools:ignore="MissingPrefix" />

                   <TextView
                       android:id="@+id/textvalue1"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:lines="2"
                       android:maxLines="2"
                       android:paddingLeft="@dimen/paddingS"
                       android:text="hello"
                       android:textColor="@color/light_black"
                       android:textSize="@dimen/textNS" />
               </LinearLayout>

               <ImageView
                   android:id="@+id/imgV"
                   android:layout_width="65dp"
                   android:layout_height="match_parent"
                   android:layout_gravity="right"
                   android:layout_marginRight="@dimen/paddingL"
                   android:layout_marginBottom="@dimen/paddingS"
                   android:layout_marginTop="@dimen/padding"
                   android:padding="@dimen/paddingL"
                   android:src="@drawable/arrow_right" />

           </LinearLayout>

           <View
               android:id="@+id/viewL3"
               android:layout_width="2dp"
               android:layout_height="40dp"
               android:layout_marginLeft="42.5dp"
               android:background="@color/onBoardGrey"

               />

           <LinearLayout
               android:id="@+id/waitingApproval"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"

               android:orientation="horizontal">


               <ImageView
                   android:id="@+id/imgView2"
                   android:layout_width="55dp"
                   android:layout_height="55dp"
                   android:layout_marginLeft="@dimen/paddingL"
                   android:layout_marginRight="@dimen/paddingL"
                   android:src="@drawable/number2gray"

                   />

               <LinearLayout
                   android:layout_width="250dp"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:orientation="vertical"
                   android:paddingRight="@dimen/paddingS">

                   <TextView
                       android:id="@+id/tvHeading2"
                       fontPath="fonts/bold.ttf"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingLeft="@dimen/paddingS"
                       android:paddingRight="@dimen/paddingS"
                       android:paddingTop="@dimen/paddingS"
                       android:text="Profile"
                       android:textColor="@color/btnText"
                       android:textSize="@dimen/textL"
                       tools:ignore="MissingPrefix" />

                   <TextView
                       android:id="@+id/textvalue2"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingLeft="@dimen/paddingS"
                       android:text="hello"
                       android:textColor="@color/light_black"
                       android:textSize="@dimen/textNS" />
               </LinearLayout>

           </LinearLayout>

           <View
               android:id="@+id/viewL4"
               android:layout_width="2dp"
               android:layout_height="40dp"
               android:layout_marginLeft="42.5dp"
               android:background="@color/onBoardGrey"

               />

           <LinearLayout
               android:id="@+id/signContract"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:onClick="signContact"

               >

               <ImageView
                   android:id="@+id/imgView3"
                   android:layout_width="55dp"
                   android:layout_height="55dp"
                   android:layout_marginLeft="@dimen/paddingL"
                   android:layout_marginRight="@dimen/paddingL"
                   android:src="@drawable/number3gray" />

               <LinearLayout
                   android:layout_width="250dp"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:orientation="vertical"
                   android:paddingRight="@dimen/paddingS">

                   <TextView
                       android:id="@+id/tvHeading3"
                       fontPath="fonts/bold.ttf"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingLeft="@dimen/paddingS"
                       android:paddingRight="@dimen/paddingS"
                       android:paddingTop="@dimen/paddingS"
                       android:text="Profile"
                       android:textColor="@color/btnText"
                       android:textSize="@dimen/textL"
                       tools:ignore="MissingPrefix" />

                   <TextView
                       android:id="@+id/textvalue3"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:lines="2"
                       android:maxLines="2"
                       android:paddingLeft="@dimen/paddingS"
                       android:text="hello"
                       android:textColor="@color/light_black"
                       android:textSize="@dimen/textNS" />
               </LinearLayout>

               <ImageView
                   android:id="@+id/imgV1"
                   android:layout_width="65dp"
                   android:layout_height="match_parent"
                   android:layout_gravity="right"
                   android:layout_marginBottom="@dimen/padding"
                   android:layout_marginRight="@dimen/paddingL"
                   android:padding="@dimen/paddingL"
                   android:src="@drawable/arrow_right" />

           </LinearLayout>

            <TextView
                android:id="@+id/lastText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                fontPath="fonts/regular.ttf"
                android:gravity="center"
                android:paddingLeft="@dimen/paddingL"
                android:paddingRight="@dimen/paddingL"
                android:paddingTop="@dimen/paddingS"
                android:paddingBottom="@dimen/paddingS"
                android:text="hello"
                android:textColor="@color/light_black"
                android:textSize="@dimen/textS"
                tools:ignore="MissingPrefix"

                />
       </LinearLayout>
   </LinearLayout>
</ScrollView>

</android.support.design.widget.CoordinatorLayout>