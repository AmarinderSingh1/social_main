<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rel2"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/padding"
        android:layout_marginLeft="@dimen/padding"
        >
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sendRecView"
        android:layout_marginTop="@dimen/paddingL"
        android:layout_marginBottom="@dimen/paddingL"
        android:layout_marginRight="@dimen/padding"
        android:layout_marginLeft="@dimen/padding"
        >
    </android.support.v7.widget.RecyclerView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fontPath="fonts/regular.ttf"
            tools:ignore="MissingPrefix"
            android:id="@+id/sendSampleBtn"
            android:textAllCaps="false"
            android:background="@drawable/rounded_black"
            android:textColor="@color/white"
            android:textSize="@dimen/textS"
            android:text="Continue"
            android:layout_marginTop="@dimen/paddingL"
            android:layout_marginRight="@dimen/padding"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginBottom="@dimen/textXXL"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btnBack"
        android:orientation="vertical"
        android:layout_marginBottom="40dp"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2"
    android:layout_marginTop="@dimen/paddingS"
    android:layout_marginBottom="@dimen/paddingS"

    >

        <TextView
            android:id="@+id/textQuantity"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            android:textSize="@dimen/textS"
            android:textColor="@color/btnText"
            android:gravity="left"
            fontPath="fonts/bold.ttf"
            tools:ignore="MissingPrefix"
            android:text="Total Quantity:"
            />

    <TextView
        android:id="@+id/textQuantityValue"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:textSize="@dimen/textS"
        android:textColor="@color/btnText"
        android:gravity="right"
        fontPath="fonts/bold.ttf"
        tools:ignore="MissingPrefix"
        android:text="0"/>
</LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/btnText"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="@dimen/paddingS"
            android:layout_marginBottom="@dimen/paddingS"
            >


        <TextView
            android:id="@+id/textWeight"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            android:textSize="@dimen/textS"
            android:textColor="@color/btnText"
            android:gravity="left"
            android:layout_weight="1"
            fontPath="fonts/bold.ttf"
            tools:ignore="MissingPrefix"
             android:text="Total Weight:"
            />

        <TextView
        android:id="@+id/textWeightValue"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:textSize="@dimen/textS"
        android:textColor="@color/btnText"
        android:gravity="right"
        fontPath="fonts/bold.ttf"
        tools:ignore="MissingPrefix"
        android:text="0"/>
    </LinearLayout>

    </LinearLayout>
    </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>