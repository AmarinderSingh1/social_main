<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/coFragInfo"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                >

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:id="@+id/nameInput"
                    android:layout_height="wrap_content"
                    android:hint="Company Name"
                    android:textSize="@dimen/textS"
                    android:textColorHint="@color/gray_light"
                    app:hintTextAppearance="@style/TextInputLayout"

                    >

                    <EditText
                        android:textColor="@color/btnText"
                        android:layout_width="match_parent"
                        android:padding="@dimen/padding"
                        fontPath="fonts/regular.ttf"
                        tools:ignore="MissingPrefix"
                        android:textSize="@dimen/textS"
                        android:id="@+id/editComName"
                        android:background="@android:color/transparent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:lines="1"
                        android:inputType="text"
                        android:digits="@string/digits"
                        />
                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginLeft="@dimen/padding"
                    android:layout_marginRight="@dimen/paddingL"
                    android:layout_marginBottom="@dimen/padding"
                    android:background="@color/gray_light"
                    />

                <TextView
                    android:id="@+id/textProvince"
                    android:textSize="@dimen/textN"
                    android:text="Select Province*"
                    android:layout_marginLeft="@dimen/padding"
                    android:layout_marginRight="@dimen/padding"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:layout_width="match_parent"
                    android:id="@+id/spinner1"
                    android:paddingRight="@dimen/paddingS"
                    android:layout_marginBottom="4dp"
                    android:paddingBottom="@dimen/paddingS"
                    android:paddingTop="@dimen/paddingS"
                    android:layout_height="wrap_content">
                </Spinner>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginLeft="@dimen/padding"
                    android:layout_marginRight="@dimen/paddingL"
                    android:layout_marginBottom="8dp"
                    android:background="@color/gray_light"
                    />

                <TextView
                    android:id="@+id/textDistrict"
                    android:textSize="@dimen/textN"
                    android:text="Select District*"
                    android:layout_marginLeft="@dimen/padding"
                    android:layout_marginRight="@dimen/padding"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:id="@+id/spinner2"
                    android:layout_marginLeft="4dp"
                    android:paddingRight="@dimen/paddingS"
                    android:paddingBottom="@dimen/paddingS"
                    android:paddingTop="@dimen/paddingS"
                    android:layout_height="wrap_content"></Spinner>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginLeft="@dimen/padding"
                    android:layout_marginRight="@dimen/paddingL"
                    android:layout_marginBottom="8dp"
                    android:background="@color/gray_light"
                    />

                <TextView
                    android:id="@+id/textCity"
                    android:textSize="@dimen/textN"
                    android:text="Select City*"
                    android:layout_marginLeft="@dimen/padding"
                    android:layout_marginRight="@dimen/padding"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:id="@+id/spinner3"
                    android:paddingRight="@dimen/paddingS"
                    android:paddingBottom="@dimen/paddingS"
                    android:paddingTop="@dimen/paddingS"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    ></Spinner>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginLeft="@dimen/padding"
                    android:layout_marginRight="@dimen/paddingL"
                    android:layout_marginBottom="8dp"
                    android:background="@color/gray_light"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:id="@+id/snumInput"
                    android:layout_height="wrap_content"
                    android:hint="Street Number"
                    android:textSize="@dimen/textS"
                    android:textColorHint="@color/gray_light"
                    app:hintTextAppearance="@style/TextInputLayout"

                    >

                    <EditText
                        android:id="@+id/editStNum"
                        fontPath="fonts/regular.ttf"
                        tools:ignore="MissingPrefix"
                        android:textSize="@dimen/textS"
                        android:layout_width="match_parent"
                        android:textColor="@color/btnText"
                        android:padding="@dimen/padding"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:digits="@string/digits1"
                        android:background="@android:color/transparent"
                        />
                </android.support.design.widget.TextInputLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginLeft="@dimen/padding"
                    android:layout_marginRight="@dimen/paddingL"
                    android:layout_marginBottom="@dimen/padding"
                    android:background="@color/gray_light"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:id="@+id/pcodeInput"
                    android:layout_height="wrap_content"
                    android:hint="Postal Code"
                    android:textSize="@dimen/textS"
                    android:textColorHint="@color/gray_light"
                    app:hintTextAppearance="@style/TextInputLayout"

                    >

                    <EditText
                        android:id="@+id/editPostalCode"
                        fontPath="fonts/regular.ttf"
                        tools:ignore="MissingPrefix"
                        android:textSize="@dimen/textS"
                        android:layout_width="match_parent"
                        android:padding="@dimen/padding"
                        android:textColor="@color/btnText"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:maxLength="6"
                        android:background="@android:color/transparent"
                        />
                </android.support.design.widget.TextInputLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginLeft="@dimen/padding"
                    android:layout_marginRight="@dimen/paddingL"
                    android:layout_marginBottom="@dimen/padding"
                    android:background="@color/gray_light"
                    />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:id="@+id/brnumInput"
                    android:layout_height="wrap_content"
                    android:hint="Business Registeration Number"
                    android:textSize="@dimen/textS"
                    android:textColorHint="@color/gray_light"
                    app:hintTextAppearance="@style/TextInputLayout"

                    >

                    <EditText
                        android:id="@+id/editBRNum"
                        fontPath="fonts/regular.ttf"
                        tools:ignore="MissingPrefix"
                        android:textSize="@dimen/textS"
                        android:layout_width="match_parent"
                        android:padding="@dimen/padding"
                        android:textColor="@color/btnText"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:background="@android:color/transparent"
                        android:digits="@string/digits1"
                        />
                </android.support.design.widget.TextInputLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginLeft="@dimen/padding"
                    android:layout_marginRight="@dimen/paddingL"
                    android:layout_marginBottom="@dimen/padding"
                    android:background="@color/gray_light"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    fontPath="fonts/regular.ttf"
                    tools:ignore="MissingPrefix"
                    android:id="@+id/conBtn"
                    android:textAllCaps="false"
                    android:background="@drawable/rounded_black"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textS"
                    android:text="Continue"
                    />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>