<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/paddingL"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_margin="@dimen/padding"
         >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="@dimen/padding"
            android:layout_marginBottom="@dimen/padding"
            >


            <TextView
                android:layout_weight=".1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:id="@+id/tvProName"
                fontPath="fonts/bold.ttf"
                tools:ignore="MissingPrefix"
                android:padding="@dimen/paddingS"
                android:textSize="@dimen/textS"
                android:textColor="@color/btnText"
                android:text="product name"
                />

            <TextView
                android:layout_weight=".60"
                android:id="@+id/tvProWhin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                fontPath="fonts/regular.ttf"
                tools:ignore="MissingPrefix"
                android:padding="@dimen/paddingS"
                android:textSize="@dimen/textS"
                android:textColor="@color/btnText"
                android:text="All Fields are Mandatory"
                />

            <ImageView
                android:layout_weight=".20"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:gravity="left"
                android:id="@+id/sampDel"
                android:padding="@dimen/paddingS"
                android:src="@drawable/ic_delete_black_24dp"
                />

        </LinearLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/unitInput"
            android:layout_height="wrap_content"
            android:hint="Units"
            android:textSize="@dimen/textS"

            >

            <EditText
                android:id="@+id/editUnit"
                fontPath="fonts/regular.ttf"
                tools:ignore="MissingPrefix"
                android:textSize="@dimen/textS"
                android:textColor="@color/btnText"
                android:layout_width="match_parent"
                android:padding="@dimen/padding"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:enabled="false"
                android:text="Nos"
                android:editable="false"
                android:clickable="false"
                android:background="@android:color/transparent"
                />
        </android.support.design.widget.TextInputLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/paddingL"
            android:background="@color/gray_light"
            android:layout_marginBottom="@dimen/padding"

            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/quantityInput"
            android:layout_height="wrap_content"
            android:hint="Quantity"
            android:textSize="@dimen/textS"
            android:textColorHint="@color/gray_light"
            app:hintTextAppearance="@style/TextInputLayout"

            >

            <EditText
                android:id="@+id/editQuantity"
                fontPath="fonts/regular.ttf"
                tools:ignore="MissingPrefix"
                android:textSize="@dimen/textS"
                android:textColor="@color/btnText"
                android:layout_width="match_parent"
                android:padding="@dimen/padding"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:background="@android:color/transparent"
                />
        </android.support.design.widget.TextInputLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/paddingL"
             android:background="@color/gray_light"
            android:layout_marginBottom="@dimen/padding"


            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/unitInput1"
            android:layout_height="wrap_content"
            android:hint="Units"
            android:textSize="@dimen/textS"
            >

            <EditText
                android:id="@+id/editUnit1"
                fontPath="fonts/regular.ttf"
                tools:ignore="MissingPrefix"
                android:textSize="@dimen/textS"
                android:textColor="@color/btnText"
                android:layout_width="match_parent"
                android:padding="@dimen/padding"
                android:enabled="false"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:editable="false"
                android:text="Kilograms"
                android:clickable="false"
                android:background="@android:color/transparent"
                />
        </android.support.design.widget.TextInputLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/paddingL"
            android:background="@color/gray_light"
            android:layout_marginBottom="@dimen/padding"

            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/weightInput"
            android:layout_height="wrap_content"
            android:hint="Weight"
            android:textSize="@dimen/textS"
            android:textColorHint="@color/gray_light"
            app:hintTextAppearance="@style/TextInputLayout"

            >

            <EditText
                android:id="@+id/editWeight"
                fontPath="fonts/regular.ttf"
                tools:ignore="MissingPrefix"
                android:textSize="@dimen/textS"
                android:textColor="@color/btnText"
                android:layout_width="match_parent"
                android:padding="@dimen/padding"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:background="@android:color/transparent"
                />
        </android.support.design.widget.TextInputLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/paddingL"
            android:layout_marginBottom="@dimen/padding"
            android:background="@color/gray_light"

            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/shipInput"
            android:layout_height="wrap_content"
            android:hint="Shipping Company Name"
            android:textSize="@dimen/textS"
            android:textColorHint="@color/gray_light"
            app:hintTextAppearance="@style/TextInputLayout"

            >

            <EditText
                android:id="@+id/editShip"
                fontPath="fonts/regular.ttf"
                tools:ignore="MissingPrefix"
                android:textSize="@dimen/textS"
                android:textColor="@color/btnText"
                android:layout_width="match_parent"
                android:padding="@dimen/padding"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:background="@android:color/transparent"
                android:digits="@string/digits"
                />
        </android.support.design.widget.TextInputLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/paddingL"
            android:layout_marginBottom="@dimen/padding"
            android:background="@color/gray_light"

            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/tcodeInput"
            android:layout_height="wrap_content"
            android:hint="Tracking Code"
            android:textSize="@dimen/textS"
            android:textColorHint="@color/gray_light"
            app:hintTextAppearance="@style/TextInputLayout"

            >

            <EditText
                android:id="@+id/editTcode"
                fontPath="fonts/regular.ttf"
                tools:ignore="MissingPrefix"
                android:textSize="@dimen/textS"
                android:textColor="@color/btnText"
                android:layout_width="match_parent"
                android:padding="@dimen/padding"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:background="@android:color/transparent"
                android:digits="@string/digits1"
                />
        </android.support.design.widget.TextInputLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/paddingL"
            android:background="@color/gray_light"
            android:layout_marginBottom="@dimen/padding"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:id="@+id/tvMandat"
            android:padding="@dimen/paddingS"
            fontPath="fonts/italic.ttf"
            tools:ignore="MissingPrefix"
            android:textSize="@dimen/textN"
            android:textColor="@color/gray_light"
            android:text="All Fields are Mandatory"
            />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>